#!/usr/bin/env bash

# Check if Waybar is installed
if ! command -v waybar &> /dev/null; then
    echo "Error: Waybar is not installed."
    exit 1
fi

# Define paths for config and style
CONFIG="$HOME/.config/hypr/component/waybar/config"
STYLE="$HOME/.config/hypr/component/waybar/style.css"

# Check if the configuration and style files exist
if [[ ! -f "$CONFIG" ]]; then
    echo "Error: Configuration file does not exist: $CONFIG"
    exit 1
fi

if [[ ! -f "$STYLE" ]]; then
    echo "Error: Style file does not exist: $STYLE"
    exit 1
fi

# Launch Waybar with specified configuration and style
waybar -c "$CONFIG" -s "$STYLE" &

echo "Waybar launched successfully."
